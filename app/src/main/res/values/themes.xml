<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Animations" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Theme.Animations.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="colorPrimary">@color/brand4</item>
        <item name="colorOnPrimary">@color/brand4</item>
        <item name="colorPrimaryVariant">@color/brand2</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">@color/brand5</item>
        <item name="backgroundTint">@color/brand1</item>
    </style>


    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/brand1</item>
        <item name="colorOnPrimary">@color/brand4</item>
        <item name="colorPrimaryVariant">@color/brand2</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">@color/brand5</item>
    </style>
<!--    <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>-->
<!---->

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/brand1</item>
        <item name="colorOnPrimary">@color/brand2</item>
        <item name="colorPrimaryVariant">@color/brand3</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.Animations.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Animations.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>