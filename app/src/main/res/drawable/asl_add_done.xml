<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/done"
        android:drawable="@drawable/ic_done"
        android:state_checked="true" />

    <item
        android:id="@+id/add"
        android:drawable="@drawable/ic_add" />

    <transition
        android:drawable="@drawable/avd_anim_add_to_done"
        android:fromId="@id/add"
        android:toId="@id/done"/>

    <transition
        android:drawable="@drawable/avd_anim_done_to_add_round"
        android:fromId="@id/done"
        android:toId="@id/add"/>

</animated-selector>
